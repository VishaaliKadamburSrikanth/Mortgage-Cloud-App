    <div class="container" id="login_div">
    <div class="card" >
        <h1 class="card-header">
            Login</h1>
        <div>
            <form action="" method="post">
                <div class="form-group">
                    <label for="username"><h4>Mortgage ID</h4></label>
                    <input type="text"  maxlength="10" class="form-control" id="mortID" placeholder="Enter your Mortgage ID" autofocus>
                </div>
                <div class="form-group">
                    <label for="password"><h4>Password</h4></label>
                    <input type="password" minlength="8"  class="form-control" id="password" placeholder="Enter your password">
                </div>
                <input type="button" id= "login_button" class="Signin" onclick="login()" style = "margin-top: 3.5%" value="Login">

            </form>
            
        </div>
    </div>
</div>
